    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyAeMHTibI7Q1tAToIMNtcoHeWbjhwYj6uQ",
            authDomain: "chatoo-kouki.firebaseapp.com",
            projectId: "chatoo-kouki",
            storageBucket: "chatoo-kouki.firebasestorage.app",
            messagingSenderId: "555587510833",
            appId: "1:555587510833:web:b5e108dc90b05347a66b10"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        let currentUser = "Guest";
        let currentRoom = "";

        async function startMegaAuth() {
            try {
                if(window.Pi) {
                    await Pi.init({ version: "2.0", sandbox: true });
                    const auth = await Pi.authenticate(["username"], (p)=>{});
                    currentUser = auth.user.username;
                }
                showApp();
            } catch(e) { showApp(); }
        }

        function showApp() {
            document.getElementById('landing-page').style.display = 'none';
            document.getElementById('app-interface').style.display = 'flex';
            document.getElementById('pi-name').innerText = "@" + currentUser;
            document.getElementById('avatar-icon').innerText = currentUser[0].toUpperCase();
            
            db.collection("users").doc(currentUser).onSnapshot(doc => {
                if(doc.exists) {
                    const pts = doc.data().points || 0;
                    document.getElementById('pi-points').innerText = "Ø±ØµÙŠØ¯Ùƒ: " + pts + " Ï€";
                    if(pts > 1000) document.getElementById('user-rank').innerText = "Ø¹Ø¶Ùˆ Ø°Ù‡Ø¨ÙŠ â­";
                }
            });
        }

        function enterRoom(name) {
            currentRoom = name;
            document.getElementById('chat-room').style.display = 'flex';
            document.getElementById('room-title').innerText = name;
            
            // ØªØ­Ù‚Ù‚ Ù…Ù† Ù…Ù„ÙƒÙŠØ© Ø§Ù„ØºØ±ÙØ© (Ù…Ø«Ø§Ù„: kouki Ù‡Ùˆ Ø§Ù„Ù…Ø§Ù„Ùƒ)
            if(currentUser === "kouki") document.getElementById('owner-tools').style.display = 'flex';

            db.collection("rooms").doc(name).onSnapshot(doc => {
                if(doc.exists && doc.data().pin) {
                    document.getElementById('pin-area').style.display = 'block';
                    document.getElementById('pin-area').innerText = "ğŸ“¢ " + doc.data().pin;
                }
            });

            db.collection("rooms").doc(name).collection("msgs").orderBy("time","asc").onSnapshot(snap => {
                const box = document.getElementById('chat-box');
                box.innerHTML = "";
                snap.forEach(d => {
                    const m = d.data();
                    const div = document.createElement('div');
                    div.className = `msg ${m.user === currentUser ? 'me' : 'other'}`;
                    div.innerHTML = `<b style="font-size:10px; display:block;">${m.user}</b>${m.text}`;
                    box.appendChild(div);
                });
                box.scrollTop = box.scrollHeight;
            });
        }

        async function setPin() {
            const val = document.getElementById('pin-input').value;
            await db.collection("rooms").doc(currentRoom).set({ pin: val }, { merge: true });
            document.getElementById('pin-input').value = "";
        }

        async function send() {
            const inp = document.getElementById('msg-input');
            if(!inp.value) return;
            await db.collection("rooms").doc(currentRoom).collection("msgs").add({
                user: currentUser, text: inp.value, time: firebase.firestore.FieldValue.serverTimestamp()
            });
            db.collection("users").doc(currentUser).set({ points: firebase.firestore.FieldValue.increment(20) }, { merge: true });
            inp.value = "";
        }

        function leaveRoom() { document.getElementById('chat-room').style.display = 'none'; }
    </script>
